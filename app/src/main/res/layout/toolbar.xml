<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:paddingTop="@dimen/title_image_padding_top"
            android:paddingBottom="@dimen/title_image_padding_bottom"
            android:layout_width="@dimen/title_image_layout_width"
            android:layout_height="@dimen/title_image_layout_height"
            android:src="@drawable/logo"/>
    </LinearLayout>
</androidx.appcompat.widget.Toolbar>