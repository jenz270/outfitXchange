<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userprofile.UserProfileScreen"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_filter" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name"
        tools:text="Kathy Miller"
        android:layout_marginTop="@dimen/user_profile_user_name_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/user_profile_user_name_text_size"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/message_details_profile_image_margin_top"
        android:src="@drawable/portrait"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />

    <TextView
        android:id="@+id/change_profile_photo"
        android:text="@string/change_profile_photo"
        android:clickable="true"
        android:layout_marginTop="@dimen/user_profile_change_profile_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/user_profile_change_profile_photo_text_size"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:focusable="true" />

    <ImageView
        android:id="@+id/manage_listings_box"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/shape_rectangle_white"
        app:layout_constraintTop_toBottomOf="@id/change_profile_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/manage_listings_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_list"
        app:layout_constraintTop_toTopOf="@id/manage_listings_box"
        app:layout_constraintLeft_toLeftOf="@id/manage_listings_box"
        app:layout_constraintRight_toLeftOf="@id/manage_listings_text"
        app:layout_constraintBottom_toBottomOf="@id/manage_listings_box"
        />

    <TextView
        android:id="@+id/manage_listings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Manage Listings"
        android:textSize="@dimen/user_profile_options_text_size"
        android:src="@drawable/shape_rectangle_white"
        app:layout_constraintTop_toTopOf="@id/manage_listings_box"
        app:layout_constraintLeft_toLeftOf="@id/manage_listings_box"
        app:layout_constraintRight_toRightOf="@id/manage_listings_box"
        app:layout_constraintBottom_toBottomOf="@id/manage_listings_box"/>

    <ImageView
        android:id="@+id/change_email_box"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/shape_rectangle_white"
        app:layout_constraintTop_toBottomOf="@id/manage_listings_box"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/change_email_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_email"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/change_email_box"
        app:layout_constraintLeft_toLeftOf="@id/change_email_box"
        app:layout_constraintRight_toLeftOf="@id/change_email_text"
        app:layout_constraintBottom_toBottomOf="@id/change_email_box"
        />

    <TextView
        android:id="@+id/change_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Change Email"
        android:textSize="@dimen/user_profile_options_text_size"
        android:src="@drawable/shape_rectangle_white"
        app:layout_constraintTop_toTopOf="@id/change_email_box"
        app:layout_constraintLeft_toLeftOf="@id/change_email_box"
        app:layout_constraintRight_toRightOf="@id/change_email_box"
        app:layout_constraintBottom_toBottomOf="@id/change_email_box"/>

    <ImageView
        android:id="@+id/change_password_box"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/shape_rectangle_white"
        app:layout_constraintTop_toBottomOf="@id/change_email_box"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/change_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Change Password"
        android:textSize="@dimen/user_profile_options_text_size"
        android:src="@drawable/shape_rectangle_white"
        app:layout_constraintTop_toTopOf="@id/change_password_box"
        app:layout_constraintLeft_toLeftOf="@id/change_password_box"
        app:layout_constraintRight_toRightOf="@id/change_password_box"
        app:layout_constraintBottom_toBottomOf="@id/change_password_box"/>

    <ImageView
        android:id="@+id/change_password_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_keys"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/change_password_box"
        app:layout_constraintLeft_toLeftOf="@id/change_password_box"
        app:layout_constraintRight_toLeftOf="@id/change_password_text"
        app:layout_constraintBottom_toBottomOf="@id/change_password_box"
        />


    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>