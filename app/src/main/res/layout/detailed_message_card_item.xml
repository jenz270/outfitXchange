<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_item"
        android:layout_gravity="left"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/card_elevation"
        app:cardBackgroundColor="#DBD5D5"
        android:layout_marginLeft="20dp"
        app:cardUseCompatPadding="true"
        android:visibility="invisible">

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintLeft_toRightOf="@+id/profile_photo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_title"
            android:textSize="12sp"
            tools:text="Hey There, yes! How long are you thinking of renting them for?" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_item_blue"
        android:layout_width="180dp"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/card_elevation"
        app:cardBackgroundColor="#BAE0FB"
        android:visibility="invisible"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/blue_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintLeft_toRightOf="@+id/profile_photo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_title"
            android:textSize="12sp"
            tools:text="Hey There, yes! How long are you thinking of renting them for?" />
    </androidx.cardview.widget.CardView>
</LinearLayout>
